<h1>Hi <%=@user.name%>, let us help you find your lunch!<h1>



<%= form_for @user url: {"/food_form", action:"find_lunch"} do |f| %>
    <h2><%= f.label "Where are you?" %></h2>
    <%= f.collection_select :area_id, @areas, :id, :name %>
    <h2><%= f.label "What do you feel like?" %></h2>
    <%= f.collection_check_boxes :tag_id, @tags, :id, :name %>
    <%= f.label "How much do you want to spend?" %>
    <%= f.collection_select :area_id, @areas, :id, :name %>

    <%= f.submit "Find my lunch!" %>


<% end %>
