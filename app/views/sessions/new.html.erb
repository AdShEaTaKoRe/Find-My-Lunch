
<div class="container">
  <div id="login" class="jumbotron p-4 p-md-5 text-secondary">
  <h1 class: >Login</h1>
    
      <%= bootstrap_form_tag url: '/login' do %>
      <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
      <%= email_field_tag :email, "Email address" %>
      <%= password_field_tag :password %>
      <br><br>
      <%= submit_tag "Log Me In!", class: "btn btn-lg btn-info" %>

    <% end %>
    
      
    
  </div>
</div>

<% if flash[:notice] %>
    <div class="alert alert-danger" role="alert">
        <p><%= link_to "Sign Up", signup_path %></p>
    </div>
  <% end %>


